/* 水平间距 */
.daily {
  width: 100vw;
  height: 100vh;
  position: relative;
}
.daily .back {
  position: absolute;
  top: 20rpx;
  left: 18rpx;
  z-index: 1;
}
.daily .tab {
  height: 70rpx;
  width: 428rpx;
  background: rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 20rpx;
  left: 50%;
  transform: translate(-50%);
  border-radius: 80rpx;
  z-index: 1;
  display: flex;
  line-height: 70rpx;
  padding: 8rpx;
}
.daily .tab .tab-item {
  flex: 1;
  text-align: center;
  height: 100%;
  border-radius: 72rpx;
  color: #ffffff;
}
.daily .tab .tab-item.active {
  background: #ffffff;
  color: black;
}
.swiper-box {
  height: 100vh;
}
.swiper-item {
  height: 100%;
}